# LLM Configuration
# Your API key for the LLM provider (required)
LLM_API_KEY=your-api-key-here

# LLM provider: openai or anthropic (default: openai)
LLM_PROVIDER=openai

# LLM model to use
# For OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo, etc.
# For Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229, etc.
LLM_MODEL=gpt-4

# Crawler Configuration
USER_AGENT=SEO-Analyzer-Bot/1.0
TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10  # For async crawler
RATE_LIMIT=0.5

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=  # Optional: logs/seo-analyzer.log

# Google PageSpeed Insights API (Optional)
# Get your API key at: https://console.cloud.google.com/
# Enable PageSpeed Insights API for your project
# Free tier: 25,000 requests/day
GOOGLE_PSI_API_KEY=your-google-psi-api-key-here
PSI_STRATEGY=mobile  # mobile or desktop
PSI_LOCALE=en

# Database Configuration
# Backend: 'local' for SQLite (default), 'turso' for remote Turso database
DB_BACKEND=local

# Local SQLite database path (used when DB_BACKEND=local)
DATABASE_URL=sqlite:///seo_data.db

# Turso Database Configuration (used when DB_BACKEND=turso)
# Get your database URL and token from: https://turso.tech/
TURSO_DATABASE_URL=libsql://your-database-name.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token-here
